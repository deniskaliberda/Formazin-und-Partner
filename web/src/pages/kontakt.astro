---
import Layout from '../layouts/Layout.astro';
import Footer from '../components/Footer.astro';

const seo = {
  title: 'Kontakt | Dr.-Ing. Formazin & Partner',
  description: 'Kontaktieren Sie Dr.-Ing. Formazin & Partner mbB in Ahrensfelde. Ingenieurbüro für Tragwerksplanung und Bauphysik.',
};

const jsonLd = {
  "@context": "https://schema.org",
  "@type": "LocalBusiness",
  "name": "Dr.-Ing. Formazin & Partner mbB",
  "description": "Ingenieurbüro für Tragwerksplanung und Bauphysik",
  "address": {
    "@type": "PostalAddress",
    "streetAddress": "Dorfstraße 1A",
    "postalCode": "16356",
    "addressLocality": "Ahrensfelde",
    "addressCountry": "DE"
  },
  "telephone": "+49-30-93691700",
  "faxNumber": "+49-30-93691720",
  "email": "kontakt@formazin-partner.de",
  "openingHoursSpecification": {
    "@type": "OpeningHoursSpecification",
    "dayOfWeek": [
      "Monday",
      "Tuesday",
      "Wednesday",
      "Thursday",
      "Friday"
    ],
    "opens": "08:00",
    "closes": "17:00"
  },
  "url": "https://www.formazin-partner.de"
};
---

<Layout title={seo.title} description={seo.description}>
  <Fragment slot="head">
    <script type="application/ld+json" set:html={JSON.stringify(jsonLd)} />
  </Fragment>

  <section class="py-20 px-6 lg:px-8 bg-white">
    <div class="max-w-7xl mx-auto">
      <!-- Header -->
      <div class="mb-16">
        <h1 class="font-['Archivo'] text-5xl font-bold text-gray-900 mb-4">
          Kontakt
        </h1>
        <p class="font-['Archivo_Narrow'] text-xl text-gray-600">
          Wir freuen uns auf Ihre Anfrage.
        </p>
      </div>

      <!-- 2-Column Layout -->
      <div class="grid lg:grid-cols-2 gap-16 mb-20">
        <!-- Left: Contact Information -->
        <div class="space-y-12">
          <!-- Address -->
          <div>
            <h2 class="font-['Archivo'] text-sm uppercase tracking-wider text-gray-500 mb-4">
              Anschrift
            </h2>
            <div class="font-['Archivo'] text-2xl leading-relaxed text-gray-900">
              <p class="font-bold">Dr.-Ing. Formazin & Partner mbB</p>
              <p>Dorfstraße 1A</p>
              <p>16356 Ahrensfelde</p>
            </div>
          </div>

          <!-- Communication -->
          <div>
            <h2 class="font-['Archivo'] text-sm uppercase tracking-wider text-gray-500 mb-4">
              Kommunikation
            </h2>
            <div class="font-['Archivo'] text-lg space-y-2 text-gray-900">
              <p>
                <span class="text-gray-600">Tel:</span> <a href="tel:+493093691700" class="hover:text-gray-600 transition-colors">030 / 93 69 17 0</a>
              </p>
              <p>
                <span class="text-gray-600">Fax:</span> 030 / 93 69 17 20
              </p>
              <p>
                <span class="text-gray-600">Mail:</span> <a href="mailto:kontakt@formazin-partner.de" class="hover:text-gray-600 transition-colors">kontakt@formazin-partner.de</a>
              </p>
            </div>
          </div>

          <!-- Opening Hours -->
          <div>
            <h2 class="font-['Archivo'] text-sm uppercase tracking-wider text-gray-500 mb-4">
              Öffnungszeiten
            </h2>
            <p class="font-['Archivo'] text-lg text-gray-900">
              Mo - Fr: 08:00 - 17:00 Uhr
            </p>
          </div>
        </div>

        <!-- Right: Contact Form -->
        <div>
          <form class="space-y-6" method="POST" action="/api/contact">
            <div>
              <label for="name" class="block font-['Archivo_Narrow'] text-sm uppercase tracking-wider text-gray-700 mb-2">
                Name *
              </label>
              <input
                type="text"
                id="name"
                name="name"
                required
                class="w-full px-4 py-3 border border-gray-400 rounded-none bg-white text-gray-900 focus:outline-none focus:border-gray-900 transition-colors"
              />
            </div>

            <div>
              <label for="email" class="block font-['Archivo_Narrow'] text-sm uppercase tracking-wider text-gray-700 mb-2">
                E-Mail *
              </label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full px-4 py-3 border border-gray-400 rounded-none bg-white text-gray-900 focus:outline-none focus:border-gray-900 transition-colors"
              />
            </div>

            <div>
              <label for="subject" class="block font-['Archivo_Narrow'] text-sm uppercase tracking-wider text-gray-700 mb-2">
                Betreff *
              </label>
              <input
                type="text"
                id="subject"
                name="subject"
                required
                class="w-full px-4 py-3 border border-gray-400 rounded-none bg-white text-gray-900 focus:outline-none focus:border-gray-900 transition-colors"
              />
            </div>

            <div>
              <label for="message" class="block font-['Archivo_Narrow'] text-sm uppercase tracking-wider text-gray-700 mb-2">
                Nachricht *
              </label>
              <textarea
                id="message"
                name="message"
                required
                rows="6"
                class="w-full px-4 py-3 border border-gray-400 rounded-none bg-white text-gray-900 focus:outline-none focus:border-gray-900 transition-colors resize-none"
              ></textarea>
            </div>

            <button
              type="submit"
              class="w-full px-8 py-4 bg-gray-900 text-white font-['Archivo_Narrow'] uppercase tracking-wider text-sm hover:bg-gray-800 transition-colors rounded-none"
            >
              Nachricht senden
            </button>
          </form>
        </div>
      </div>

      <!-- Map Section -->
      <div class="mb-20">
        <h2 class="font-['Archivo'] text-sm uppercase tracking-wider text-gray-500 mb-6">
          Standort
        </h2>
        <!-- Google Maps Embed Placeholder -->
        <div class="w-full h-[400px] bg-gray-200 border border-gray-300 flex items-center justify-center">
          <div class="text-center text-gray-500">
            <svg class="w-16 h-16 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            <p class="font-['Archivo_Narrow'] uppercase text-sm">Google Maps Karte</p>
            <p class="font-['Archivo_Narrow'] text-xs mt-1">Dorfstraße 1A, 16356 Ahrensfelde</p>
          </div>
        </div>
        <!-- 
          To use actual Google Maps, replace the div above with:
          <iframe
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2422.xxx!2d13.xxx!3d52.xxx!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2zNTLCsDM0JzQ1LjAiTiAxM8KwMzQnNDUuMCJF!5e0!3m2!1sde!2sde!4v1234567890"
            width="100%"
            height="400"
            style="border:0;"
            allowfullscreen=""
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"
            class="border border-gray-300"
          ></iframe>
        -->
      </div>
    </div>
  </section>

  <Footer />
</Layout>
