---
import Layout from '../layouts/Layout.astro';
import StickyServiceScroll from '../components/react/StickyServiceScroll';
import Footer from '../components/Footer.astro';

// Service-Daten mit Bildern
const services = [
  {
    number: "01",
    title: "Generalplanung",
    description: "Koordination aller Fachdisziplinen. Ein Ansprechpartner für das gesamte Bauvorhaben. Kosten-, Termin- und Qualitätskontrolle nach HOAI.",
    keywords: "Generalplaner Berlin Brandenburg",
    image: "https://images.unsplash.com/photo-1503387762-592deb58ef4e?w=1200&q=80"
  },
  {
    number: "02",
    title: "Architektur & Entwurf",
    description: "Objektplanung für Gebäude und Innenräume. Von der ersten Skizze bis zur Ausführungsplanung. Schwerpunkt: Wohnungsbau und öffentliche Bauten.",
    keywords: "Architekturbüro Ahrensfelde",
    image: "https://images.unsplash.com/photo-1487958449943-2429e8be8625?w=1200&q=80"
  },
  {
    number: "03",
    title: "Tragwerksplanung (Statik)",
    description: "Erstellung von statischen Berechnungen. Konstruktiver Ingenieurbau. Wirtschaftliche Bemessung von Stahlbeton-, Stahl- und Holztragwerken.",
    keywords: "Statik Tragwerksplanung",
    image: "https://images.unsplash.com/photo-1541888946425-d81bb19240f5?w=1200&q=80"
  },
  {
    number: "04",
    title: "Brandschutz & Bauphysik",
    description: "Nachweise für Wärmeschutz und Schallschutz. Erstellung von Brandschutzkonzepten für Sonderbauten. Expertise Dr. Formazin.",
    keywords: "Brandschutzkonzept Bauphysik",
    image: "https://images.unsplash.com/photo-1486718448742-163732cd1544?w=1200&q=80"
  },
  {
    number: "05",
    title: "Gutachten & Sachverständigenwesen",
    description: "Dr.-Ing. Karsten Formazin ist öffentlich bestellter und vereidigter Sachverständiger für Schäden an Gebäuden. Gerichtsgutachten, Beweissicherung, Sanierungskonzepte.",
    keywords: "Sachverständiger Gebäudeschäden",
    image: "https://images.unsplash.com/photo-1504307651254-35680f356dfd?w=1200&q=80"
  }
];
---

<Layout>
  <!-- Page Header (Reduziert, mehr Fokus auf Content) -->
  <section class="bg-paper-white pt-24 lg:pt-32 pb-12 lg:pb-16">
    <div class="max-w-din mx-auto px-6 lg:px-12">
      <div class="max-w-2xl">
        <h1 class="font-bold text-5xl lg:text-6xl text-construction-grey mb-6 leading-tight">
          Unser Leistungsspektrum
        </h1>
        
        <p class="text-xl text-gray-700 leading-relaxed">
          Von der ersten Planungsskizze bis zur finalen Abnahme. 
          Wir begleiten Bauvorhaben in allen Leistungsphasen der HOAI.
        </p>
      </div>
    </div>
  </section>

  <!-- Sticky Scroll Section -->
  <section class="bg-gray-50 py-0 md:py-16">
    <div class="max-w-din mx-auto px-6 lg:px-12">
      <StickyServiceScroll services={services} client:load />
    </div>
  </section>

  <!-- CTA Section -->
  <section class="bg-white py-20 lg:py-24">
    <div class="max-w-din mx-auto px-6 lg:px-12">
      <div class="max-w-2xl mx-auto text-center">
        <h2 class="font-bold text-3xl lg:text-4xl text-construction-grey mb-6">
          Bereit für Ihr Projekt?
        </h2>
        
        <p class="text-lg text-gray-700 mb-8">
          Kontaktieren Sie uns für ein unverbindliches Erstgespräch. 
          Wir besprechen Ihre Anforderungen und erstellen ein individuelles Angebot.
        </p>
        
        <a 
          href="/kontakt" 
          class="inline-block px-8 py-4 bg-din-blue text-white font-semibold uppercase tracking-wide transition-all duration-200 hover:bg-din-blue-600 border-2 border-din-blue"
        >
          Kontakt aufnehmen
        </a>
      </div>
    </div>
  </section>

  <Footer />
</Layout>
